@page
@model House2Invest.Pages.ConfigAzure.EditModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Pages/Shared/_LayoutCMS.cshtml";
}
<div class="container-fluid px-xl-5">
    <section class="py-5">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h6 class="text-uppercase mb-0"><i class="o-clock-1 mr-3 text-gray"></i> Editando um registro</h6>
                    </div>
                    <div class="card-body">
                        <div class="pb-5">
                            <form id="formPrincipal" name="formPrincipal" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="AppConfiguracoes_Azure.Id" />
                                <div class="form-group row mb-4">
                                    <div class="col-md-12 ml-auto pull-right">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Salvar</button>
                                        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                                    </div>
                                </div>
                                <ul class="nav nav-tabs" id="myTab" name="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><i class="fa fa-archive"></i> Principal</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                        <div class="row py-3">
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label asp-for="AppConfiguracoes_Azure._azureblob_AccountName" class="control-label"></label>
                                                    <input asp-for="AppConfiguracoes_Azure._azureblob_AccountName" class="form-control" autofocus />
                                                    <span asp-validation-for="AppConfiguracoes_Azure._azureblob_AccountName" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="AppConfiguracoes_Azure._azureblob_AccountKey" class="control-label"></label>
                                                    <input asp-for="AppConfiguracoes_Azure._azureblob_AccountKey" class="form-control" />
                                                    <span asp-validation-for="AppConfiguracoes_Azure._azureblob_AccountKey" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="AppConfiguracoes_Azure._azureblob_ContainerRaiz" class="control-label"></label>
                                                    <input asp-for="AppConfiguracoes_Azure._azureblob_ContainerRaiz" class="form-control" />
                                                    <span asp-validation-for="AppConfiguracoes_Azure._azureblob_ContainerRaiz" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12 line"></div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        <input asp-for="AppConfiguracoes_Azure.UsarSimuladorLocal" type="checkbox" class="custom-control-input">
                                                        <label asp-for="AppConfiguracoes_Azure.UsarSimuladorLocal" class="custom-control-label" for="AppConfiguracoes_Azure_UsarSimuladorLocal"></label>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="AppConfiguracoes_Azure.EnderecoArmazLocal" class="control-label"></label>
                                                    <input asp-for="AppConfiguracoes_Azure.EnderecoArmazLocal" class="form-control" />
                                                    <span asp-validation-for="AppConfiguracoes_Azure.EnderecoArmazLocal" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 line"></div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group row">
                                    <div class="col-md-12 ml-auto text-center">
                                        <button id="btnsubmitformprincipal" name="btnsubmitformprincipal" type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Salvar</button>
                                        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            $("#mnusidebar_cms_controles").removeClass("collapsed");
            $("#mnusidebar_cms_controles").attr("aria-expanded", "true");
            $("#target_mnuconfig").addClass("show");
            $("#mnusidebar_cms_controlesazure").addClass("active");
        </script>
    }
}