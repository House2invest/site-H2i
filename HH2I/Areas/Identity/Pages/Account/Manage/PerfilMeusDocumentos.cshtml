    var _sub_valor_final = (Model.Investimento.Valor / 100) * _taxa_valorfinal;
    //var _valor_final = (Convert.ToDouble(Model.Investimento.BlocoProjInvestimentos.Valor.Replace("R$", "").Trim()) + Math.Round(_sub_valor_final, 2)).ToString("C2");
    var _valor_final = (Model.Investimento.Valor + Math.Round(_sub_valor_final, 2)).ToString("C2");

