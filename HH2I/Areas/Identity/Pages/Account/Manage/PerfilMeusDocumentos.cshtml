                    <h4>@Html.Raw(Model.Investimento.BlocoProjInvestimentos.Titulo)</h4>
                    <hr class="col-12 mt-1" style="max-width:95%;" />
                    <b>STATUS DA OFERTA:</b>
                    <br />
                    <b class="@Html.Raw(Model.Investimento.BlocoProjInvestimentos.Status=="C" ? "text-danger" : Model.Investimento.BlocoProjInvestimentos.Status=="A" ? "text-success" : Model.Investimento.BlocoProjInvestimentos.Status=="S" ? "text-warning" :"text-primary")" style="font-size:40px;">
                        @Html.Raw(@VerificadoresRetornos.PROC__RetornaStatusLiteralOferta(Model.Investimento.BlocoProjInvestimentos.Status))
                    </b>

                    <div class="row">
                        <hr class="col-12 mt-5" style="max-width:95%;" />
                        <div class="col-12">
                            <b class="text-primary mt-2">INFORMAÇÕES DOS INVESTIMENTOS:</b>
