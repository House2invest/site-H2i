@page
@model House2Invest.Pages.CMSTaxasMercado.CreateModel
@{
    ViewData["Title"] = "Criar";
    Layout = "~/Pages/Shared/_LayoutCMS.cshtml";
}
<div class="container-fluid px-xl-5">
    <section class="py-5">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h6 class="text-uppercase mb-0">
                            <i class="o-clock-1 mr-3 text-gray"></i> Criando um registro
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="pb-5">
                            <form id="formPrincipal" name="formPrincipal" method="post" enctype="multipart/form-data">
                                <div class="form-group row mb-4">
                                    <div class="col-md-12 ml-auto pull-right">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Salvar</button>
                                        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                                    </div>
                                </div>
                                <ul class="nav nav-tabs" id="myTab" name="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="tab1-tab" href="#tab1" data-toggle="tab" role="tab" aria-controls="tab1" aria-selected="true">
                                            <i class="fa fa-archive"></i> Principal
                                        </a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                                        <div class="row py-3">
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label asp-for="taxaglobal.descricao" class="control-label"></label>
                                                    <input asp-for="taxaglobal.descricao" class="form-control" autofocus />
                                                    <span asp-validation-for="taxaglobal.descricao" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label asp-for="taxaglobal.valor" class="control-label"></label>
                                                    <input asp-for="taxaglobal.valor" class="form-control" />
                                                    <span asp-validation-for="taxaglobal.valor" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label asp-for="taxaglobal.informacoes" class="control-label"></label>
                                                    <textarea asp-for="taxaglobal.informacoes" class="form-control"></textarea>
                                                    <span asp-validation-for="taxaglobal.informacoes" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label asp-for="taxaglobal.pre_selec" class="control-label"></label>
                                                    <select asp-for="taxaglobal.pre_selec" class="col-12 form-control">
                                                        <option value="True">SIM</option>
                                                        <option value="False">NÃO</option>
                                                    </select>
                                                    <span asp-validation-for="taxaglobal.pre_selec" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 line"></div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group row">
                                    <div class="col-md-12 ml-auto text-center">
                                        <button id="btnsubmitformprincipal" name="btnsubmitformprincipal" type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Salvar</button>
                                        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $("#mnusidebar_cms_taxasmercado").addClass("active");
    </script>
}